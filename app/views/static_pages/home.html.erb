<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/member_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/timeline_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Timeline feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to the dating world</h1>

  <h2>
    Here is a video about the dating through internet, be safe and have fun:
  </h2>
  <div class="embed-responsive embed-responsive-16by9">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/N33q303jSy0" frameborder="0" allowfullscreen></iframe>
  </div>
  <br>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"), 'http://rubyonrails.org/' %><p>Powered by Ruby On Rails</p>
<% end %>